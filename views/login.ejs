<body>
	<div class="overlay">
		<div class="card"><center>
			<h2><span>LOGO</span></h2><br><br>
		<form action="/login">
		<table width="100%">
	    <!---------Error message---->
		<tr>
			<td><div class="icon"><i class="material-icons">mail_outline</i></div></td>
			<td><input type="email" name="email" placeholder="Email"></td>
			<div class="email error"></div>
		</tr>
		<tr>
    	<td><div class="icon"><i class="material-icons">lock_outline</i></div></td>
			<td><input type="password" name="password" placeholder="Password"></td>
			<div class="password error"></div>
            </tr>
            <tr>
		     <td colspan="2"><button class="signup">Login</button></td>
		 </tr>
		 <tr>
		     <td colspan="2"><center>Don't have an account?</center></td>
		 </tr>
		 <tr>
		     <td colspan="2"><a href="/signup"><div class="signup">Signup</div></a></td>
		 </tr>
		</table>
        </form>
	 </center>
